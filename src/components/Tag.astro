---
import IconHash from "@/assets/icons/IconHash.svg";

export interface Props {
  tag: string;
  tagName: string;
  size?: "sm" | "lg";
}

const { tag, tagName, size = "sm" } = Astro.props;
---

<li
  class:list={[
    "group inline-block group-hover:cursor-pointer",
    size === "sm" ? "my-1 underline-offset-4" : "mx-1 my-3 underline-offset-8",
  ]}
>
  <a
    href={`/tags/${tag}/`}
    transition:name={tag}
    class="relative flex items-center pr-2 text-lg underline decoration-dashed group-hover:-top-0.5 group-hover:text-accent focus-visible:p-1"
  >
    <IconHash
      class:list={[
        "inline-block opacity-80",
 { "mr-1 size-4": size === "sm" },
 { "mr-2 size-6": size === "sm" },
      ]}
    />
    <span class:list={[{ "text-sm": size === "sm" }]}>
 {tagName}
 </span>
  </a>
</li>
